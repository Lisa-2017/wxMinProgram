/* pages/index/index.wxss */
page{
  height: 100%
}
.container{
  width: 100%;
  height: 100%;
  background-color: #87CEFA;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar{
  width: 200rpx;
  height:200rpx;
  border-radius: 50%;
  margin: 100rpx 0;
}
.userName{
  width: 400rpx;
  height: 80rpx;  
  line-height: 80rpx;
  
  margin:200rpx 0 100rpx 0;
  text-align: center;
  
}
.userName text{  
  color: purple;
  font-size: 28rpx;
  font-weight: 600;
}

.btnEnter{
  width: 200rpx;
  height: 80rpx;  
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-weight: 600;
  border:1rpx solid #fff ;
  border-radius:16rpx; 
  box-shadow: 10rpx 10rpx  12rpx 16rpx rgba(255,255,255,.2) inset,-10rpx -10rpx  12rpx 16rpx rgba(255,255,255,.2) inset;
}